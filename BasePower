
#include <stdio.h>

int main()
{
    float b,p,r=1;
    printf("Enter the value of base : ");
    scanf("%f",&b);
    printf("Enter the value of power : ");
    scanf("%f",&p);
    if(p>0)
    {
        for(int i=0;i<p;i++)
        {
            r=b*r;
        }
    }
    else
    {
        for(int i=0; i>p; i--)
        {
            r =  1/b * r;
            
        }
    
    }
    printf("The Result is %f",r);

    return 0;
}
